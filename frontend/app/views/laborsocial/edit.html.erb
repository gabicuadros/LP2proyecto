<!DOCTYPE html>
<head>
    <style>
        h1{
            text-align: center;
        }

        *{box-sizing:border-box;}

        form{
            width:500px;
            padding:16px;
            border-radius:10px;
            margin:auto;
            background-color:#ccc;
        }

        form label{
            width:100px;
            font-weight:bold;
            display:inline-block;
        }

        form input[type="text"],
        form input[type="email"]{
            width:350px;
            padding:3px 10px;
            border:1px solid #f6f6f6;
            border-radius:3px;
            background-color:#f6f6f6;
            margin:8px 0;
            display:inline-block;
        }

        form input[type="submit"]{
            width:100%;
            padding:8px 16px;
            margin-top:32px;
            border:1px solid #000;
            border-radius:5px;
            display:block;
            color:#fff;
            background-color:#000;
        } 

        form input[type="submit"]:hover{
            cursor:pointer;
        }

        textarea{
            width:100%;
            height:100px;
            border:1px solid #f6f6f6;
            border-radius:3px;
            background-color:#f6f6f6;			
            margin:8px 0;
            resize:none;
            display:block;
        }
    </style>
</head>
<h1>Editar labor social</h1>
<%= form_with(url: "http://localhost:8000/api/laborsocial/" + params.require(:id), method: "put", local: false) do |f| %>
    <div>
        <%= f.label :nombres %>
        <%= f.text_field :nombres, :value => @datos["nombres"] %>
    </div>
    <div>
        <%= f.label :categoria %>
        <%= f.text_field :categoria, :value => @datos["categoria"] %>
    </div>
    <div>
        <%= f.label :finicial, "Fecha Inicial " %>
        <%= f.date_field :finicial, :value => @datos["finicial"] %>
    </div>
    <div>
        <%= f.label :ffinal, "Fecha Final " %>
        <%= f.date_field :ffinal, :value => @datos["ffinal"] %>
    </div>
    <div>
        <%= f.label :perfil %>
        <%= f.text_field :perfil, :value => @datos["perfil"] %>
    </div>
    <div>
        <%= f.label :descripcion %>
        <%= f.text_field :descripcion, :value => @datos["descripcion"] %>
    </div>
    <div>
        <%= f.label :competencias %>
        <%= f.text_field :competencias, :value => @datos["competencias"] %>
    </div>
    <div>
        <%= f.label :oferta %>
        <%= f.text_field :oferta, :value => @datos["oferta"] %>
    </div>

    <div>
        <%= f.submit :submit, :onclick => "regresar();" %>
    </div>

    <script type="text/javascript">
        function regresar() {
            location.href = "http://localhost:3000";
            console.log("Hola mundo");
        };
    </script>

<% end %>
<%= link_to 'Back', laborsocial_index_path %>